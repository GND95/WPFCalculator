<Window x:Class="WpfApp1.InputWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="InputWindow" Height="131" Width="200.333" Loaded="Window_Loaded">
    <Grid>
        <TextBox x:Name="txtBoxStart" HorizontalAlignment="Center" Height="23" Margin="37,0,36.333,37.333" TextWrapping="Wrap" VerticalAlignment="Bottom" Width="120" TabIndex="0" Background="#FFE0E0E0"/>
        <Label Content="Starting Value:" Margin="37,0,36.333,62.333" VerticalAlignment="Bottom" RenderTransformOrigin="-2.105,0.013" Width="120" HorizontalAlignment="Center" HorizontalContentAlignment="Center"/>
        <Button x:Name="startButton" Content="Start" HorizontalAlignment="Center" Margin="0,0,0,8" VerticalAlignment="Bottom" Width="75" Background="#FF72C046" FontWeight="Bold" FontSize="14" Click="startButton_Click"/>

    </Grid>
</Window>
